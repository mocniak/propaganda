<ul id="article-sidebar">
    {% for article in articles %}
        <li>
            <a href="{{ path('show_article', {'slug': article.slug}) }}">{{ article.title }}</a>

            <span class="date">{{ article.createdAt.format('Y-m-d') }}</span>
            <span class="date">{{ article.author }}</span>
        </li>
    {% endfor %}
</ul>
