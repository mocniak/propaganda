<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script>
    google.load('visualization', '1.1', {'packages': ['corechart', 'bar', 'line']});

    function draw_charts() {
        var data = new google.visualization.DataTable();

        {% for column in chart.columns %}
        data.addColumn('{{ column.type }}', '{{ column.name }}');
        {% endfor %}
        data.addRows([
            {% for row in chart.data %}
            [{% for column in chart.columns %}
                {% if column.type == 'string' %}'{{ row[loop.index0] }}'{% else %}{{ row[loop.index0] }}{% endif %},
                {% endfor %}],
            {% endfor %}
        ]);

        var options = {
            height: 400,
            vAxis: {title: 'Zdarzenia z udziałem rowerzystów i ich ofiary '}
        };

        var chart = new google.visualization.ColumnChart(document.getElementById('{{ chart.id }}'));
        chart.draw(data, options);
    }

    google.setOnLoadCallback(draw_charts);
</script>